pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                echo 'Code already present in Jenkins workspace'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('flask-app') {
                    script {
                        sh 'docker build -t flask-ci-cd .'
                    }
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    // Stop existing container if running
                    sh 'docker rm -f flask-running || true'
                    // Run new container
                    sh 'docker run -d -p 5000:5000 --name flask-running flask-ci-cd'
                }
            }
        }
    }
}
