pipeline {
    agent none
    stages {
        stage('Compile on Agent1') {
            agent { label 'agent1' }
            steps {
                git 'https://github.com/mihirhebalkar/DevOpsLab3/tree/mihir/Mihir120_DevopsLab/Exp-4/sample-app'
                sh 'mvn clean compile'
            }
        }
        stage('Test on Agent2') {
            agent { label 'agent2' }
            steps {
                git 'https://github.com/mihirhebalkar/DevOpsLab3/tree/mihir/Mihir120_DevopsLab/Exp-4/sample-app'
                sh 'mvn test'
            }
        }
    }
}
